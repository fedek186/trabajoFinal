<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<%- include('./partials/headerNw.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de busqueda: <%= palabraBuscada %> </h2>
				<% if (resultado.length == 0){%>
					<h1>No encontramos el prod buscado.</h1>
				<%}%>
			</div>
			<!-- Show the "ultimos" products -->
			<ul class="listaBusqueda">
		
			<% for(let i = 0; i < resultado.length ; i++){%>
				<li class="resultadoLista">
					<h1 class="resultadoBusqueda"><%= resultado[i].nombre %></h1>
					<div class="resultadoBusqueda"><%= resultado[i].descripcion %> </div>
				</li>
			<%}%> 
			</ul>
				
	
	<!-- footer -->
	<%- include('./partials/footerNw.ejs') %>
	<!-- /footer -->
</body>

</html>