<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<%- include('./partials/headerNw.ejs') %> 
	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12" id="col-12-id">
				<h2 class="products-title" id="products-title-id">Editar mi perfil</h2>
			</div>
		</div>
			<!-- Show the "ultimos" products -->
			<form action="" method="get">
				<div class="containerLogin" id="centrandoCaja-profile-edit">
					<div class="profile-edit-box">
						<label id="idDelBreak">Foto de perfil</label>
						<input type="file" name="fotoPerfil">
					</div>
					<div class="profile-edit-box">
						<label id="idDelBreak">Nombre de usuario</label>
						<input type="text" value=" <%= usuario. nombre_usuario %> " name="usuario">
					</div>
					<div class="profile-edit-box">
						<label id="idDelBreak">Contraseña</label>
						<input type="password" value="<%= usuario.contrasenia %>" name="contraseña">
					</div>
					<div class="profile-edit-box">
						<label id="idDelBreak">DNI</label>
						<input type="text" value="<%= usuario.dni %>" placeholder="" name="dni">
					</div>
					<div class="profile-edit-box" id="enviar">
						<input type="submit" value="Enviar">
					</div>
				</div>
			</form>
	</div>

	<!-- footer -->
	<%- include('./partials/footerNw.ejs') %>
	<!-- /footer -->
</body>
</html>