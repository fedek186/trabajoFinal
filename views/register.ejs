<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %> 
<body>
	<!-- Header -->
	<%- include('./partials/headerNw.ejs') %> 
	<!-- /Header -->

	<!--Formulario de register--> 
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>	
		</div>
		<form action="/" method="get">	

			<div class="containerRegister">
				<div class="emailBox">
					<label for="email"><b id="idDelBreak">Email</b id="idDelBreak"></label>
					<br>
					<input type="text" name="email" id="email" placeholder="Ingrese su mail" required>
				</div>
				<div class="userBox">
					<label for="text"><b id="idDelBreak">UserName</b id="idDelBreak"></label>
					<br>
					<input type="text" name="user" id="user" placeholder="defina nombre de user" required>
				</div>
				<div class="passBox">
					<label for="psw"><b id="idDelBreak">Contrase√±a</b id="idDelBreak"></label>
					<br>
					<input type="text" name="password" id="password" placeholder="ingrese contrasena" required>
				</div>
				<div class="nacimientoBox">
					<label for="number"><b id="idDelBreak">Ingrese su fecha de nacimiento</b id="idDelBreak"></label>
					<br>
					<input type="date" name="fecha de nacimiento" id="nacimiento" placeholder="ingrese su fecha de nacimiento" required>
				</div>
				<div class="dniBox">
					<label for="number"><b id="idDelBreak">Ingrese su Dni</b id="idDelBreak"></label>
					<br>
					<input type="number" name="dni" id="dni" placeholder="ingrese su DNI" required>
				</div>
				<div class="profileBox">
					<label for="file"> <b id="idDelBreak">Defina foto de perfil</b id="idDelBreak"></label>
					<br>
					<input type="file" name="profilePic" id="profilePic" placeholder="Defina foto de perfil" required>
				</div>
				<button type="submit" class="sendForm">Enviar</button>
			</div>

		</form>
	<!-- footer -->
	<%- include('./partials/footerNw.ejs') %>
	<!-- /footer -->
</body>

</html>